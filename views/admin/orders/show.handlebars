<div class="panel panel-primary">
  <div class="panel-heading">
    <h1>Show Order: <span style="color: lightblue;">{{order.id}}</span></h1>
    <form  action="/admin/orders" method="get">
    <button type="submit" class="btn btn-warning"><< Back to Orders</button>
  </form>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-5">
        <h3>Ordered Items</h3>

      {{#each order.items as |item|}}

      <table class="table table-striped table-bordered table-hover table-responsive">
        <thead>
          <tr>
            <th style="background: lightgrey;">Field</th>
            <th style="background: lightgrey;">Value</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td>Name</td>
              <td>{{item.name}}</td>
            </tr>
            <tr>
              <td>Price</td>
              <td>${{item.price}}</td>
            </tr>
            <tr>
              <td>SKU</td>
              <td>{{item.sku}}</td>
            </tr>
            <tr>
              <td>Description</td>
              <td>{{item.description}}</td>
            </tr>
            <tr>
              <td>Category</td>
              <td>{{item.category}}</td>
            </tr>
            <tr>
              <td>Quantity</td>
              <td>{{item.quantity}}</td>
            </tr>
        </tbody>
      </table>

        {{/each}}
      </div>
      <div class="col-xs-6 col-xs-offset-1">
        <h3>Customer Info</h3>
      <table class="table table-striped table-bordered table-hover table-responsive">
        <thead>
          <tr>
            <th style="background: lightgrey;">Field</th>
            <th style="background: lightgrey;">Value</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td>First Name</td>
              <td>{{order.firstName}}</td>
            </tr>
            <tr>
              <td>Last Name</td>
              <td>{{order.lastName}}</td>
            </tr>
            <tr>
              <td>Email</td>
              <td>{{order.email}}</td>
            </tr>
            <tr>
              <td>Street Address</td>
              <td>{{order.streetAddress}}</td>
            </tr>
            <tr>
              <td>City</td>
              <td>{{order.city}}</td>
            </tr>
            <tr>
              <td>State</td>
              <td>{{order.state}}</td>
            </tr>
        </tbody>
      </table>
      </div>
      <div class="col-xs-6 col-xs-offset-1">
        <h3>Order Info</h3>
      <table class="table table-striped table-bordered table-hover table-responsive">
        <thead>
          <tr>
            <th style="background: lightgrey;">Field</th>
            <th style="background: lightgrey;">Value</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td>Checkout Date</td>
              <td>{{order.checkoutDate}}</td>
            </tr>
            <tr>
              <td>Stripe Token</td>
              <td>{{order.StripeToke}}</td>
            </tr>
            <tr>
              <td>Card Type</td>
              <td>{{order.cardType}}</td>
            </tr>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
