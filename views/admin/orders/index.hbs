<h2 class="text-center">Admin Orders Index</h2>
{{#if orders}}
  <div class="container">
    <div class="col-sm-12">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Checkout Date</th>
            <th>Revenue</th>
            <th>Customer Email</th>
            <th>Customer State</th>
          </tr>
        </thead>
        <tbody>
          {{#each orders as |order|}}
            <tr>
              <td><a href="/admin/orders/{{order.id}}">{{order.id}}</a></td>
              <td>{{displayDate order._doc.created}}</td>
              <td>${{displayPrice (convertToDollars order._doc.amount)}}</td>
              <td>{{order._doc.stripeEmail}}</td>
              <td>{{order._doc.state}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
{{else}}
  <hr>
  <h4 class="text-center">There has not been any transactions yet</h4>
{{/if}}
