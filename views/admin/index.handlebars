
<!-- Jumbotron Header -->
  <header class="jumbotron hero-spacer">
    <h2>Admin Orders Index Page</h2>
  </header>

  <hr>

{{#if orders.length }}
 <div class="panel panel-info">
  <div class="panel-body">
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Description</th>
        <th>Checkout Date</th>
        <th>Revenue</th>
        <th>Customer Email</th>
        <th>Customer State</th>
      </tr>
    </thead>
    <tbody>
      {{#each orders as |order| }}
        <tr>
          <td>
            <a href="/admin/{{ order.id }}">{{ order.id }}</a>
          </td>
          <td>
            <a href="/admin/{{ order.id }}">{{ order.description }}</a>
          </td>
          <td>
            <p>{{ formatDate order.createdAt }}</p>
          </td>
          <td>
            <p>{{ formatCurrency order.total}}</p>
          </td>
          <td>
            <p>{{ order.email }}</p>
          </td>
          <td>
            <p>{{ order.state }}</p>
          </td>
        </tr>
      {{/each }}
    </tbody>
  </table>
</div>
</div>
{{else }}
  <p class="text-danger">No orders</p>
{{/if }}

