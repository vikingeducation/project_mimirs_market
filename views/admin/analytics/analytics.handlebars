<div class="panel panel-primary">
  <div class="panel-heading">
    <h1>Analytics</h1>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-2">
        <h3>Totals</h3>
      <table class="table table-striped table-bordered table-hover table-responsive">
        <thead>
          <tr>
            <th style="background: lightgrey;">Field</th>
            <th style="background: lightgrey;">Value</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td>Total Revenue Ever</td>
              <td>{{item.name}}</td>
            </tr>
            <tr>
              <td>Total Units Sold</td>
              <td>{{item.price}}</td>
            </tr>
            <tr>
              <td>Total Transactions</td>
              <td>{{item.sku}}</td>
            </tr>
            <tr>
              <td>Total Customers</td>
              <td>{{item.description}}</td>
            </tr>
            <tr>
              <td>Total Products</td>
              <td>{{item.category}}</td>
            </tr>
            <tr>
              <td>Total Categories</td>
              <td>{{item.quantity}}</td>
            </tr>
        </tbody>
      </table>
      </div>
      <div class="col-xs-3 col-xs-offset-2">
        <h3>Revenue By State</h3>
      <table class="table table-striped table-bordered table-hover table-responsive">
        <thead>
          <tr>
            <th style="background: lightgrey;">Field</th>
            <th style="background: lightgrey;">Value</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>{{state.name}}</td>
            <td></td>
          </tr>

          {{#each states as |state|}}
            <tr>
              <td>GA{{state.name}}</td>
              <td></td>
            </tr>
            {{/each}}
        </tbody>
      </table>
      </div>
      <div class="col-xs-3 col-xs-offset-2">
        <h3>Revenue By Product</h3>
      <table class="table table-striped table-bordered table-hover table-responsive">
        <thead>
          <tr>
            <th style="background: lightgrey;">Field</th>
            <th style="background: lightgrey;">Value</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td>Checkout Date</td>
              <td>{{order.checkoutDate}}</td>
            </tr>
            <tr>
              <td>Stripe Token</td>
              <td>{{order.StripeToke}}</td>
            </tr>
            <tr>
              <td>Card Type</td>
              <td>{{order.cardType}}</td>
            </tr>
        </tbody>
      </table>
      </div>
      <div class="col-xs-3 col-xs-offset-2">
        <h3>Revenue By Category</h3>
      <table class="table table-striped table-bordered table-hover table-responsive">
        <thead>
          <tr>
            <th style="background: lightgrey;">Field</th>
            <th style="background: lightgrey;">Value</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td>Checkout Date</td>
              <td>{{order.checkoutDate}}</td>
            </tr>
            <tr>
              <td>Stripe Token</td>
              <td>{{order.StripeToke}}</td>
            </tr>
            <tr>
              <td>Card Type</td>
              <td>{{order.cardType}}</td>
            </tr>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
