<div class="row text-center">
  <h1>Admin Orders Show</h1>
</div>

<div class="row">
  <div class="col-sm-6">
    <h3 class="text-center">Ordered Items</h3>
    {{#each order.orderItems as |product|}}
    <div class="table-responsive panel panel-default">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Field</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Name</td>
            <td>{{product.product.name}}</td>
          </tr>
          <tr>
            <td>Price</td>
            <td>${{product.product.price}}.00</td>
          </tr>
          <tr>
            <td>SKU</td>
            <td>{{product.product.sku}}</td>
          </tr>
          <tr>
            <td>Description</td>
            <td>{{product.product.description}}</td>
          </tr>
          <tr>
            <td>Category</td>
            <td>{{product.product.category}}</td>
          </tr>
          <tr>
            <td>Quantity</td>
            <td>{{product.product.quantity}}</td>
          </tr>
        </tbody>
      </table>
    </div>
    {{/each}}
  </div>
  <div class="col-sm-6">
    <h3 class="text-center">Customer Info</h3>
    <div class="table-responsive panel panel-default">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Field</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>First Name</td>
            <td>{{order.user.fname}}</td>
          </tr>
          <tr>
            <td>Last Name</td>
            <td>{{order.user.lname}}</td>
          </tr>
          <tr>
            <td>Email</td>
            <td>{{order.user.email}}</td>
          </tr>
          <tr>
            <td>Street</td>
            <td>{{order.address.street}}</td>
          </tr>
          <tr>
            <td>City</td>
            <td>{{order.address.city}}</td>
          </tr>
          <tr>
            <td>State</td>
            <td>{{order.address.state}}</td>
          </tr>
        </tbody>
      </table>
    </div>
    <h3 class="text-center">Order Info</h3>
    <div class="table-responsive panel panel-default">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Field</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Checkout Date</td>
            <td>{{order.createdAt}}</td>
          </tr>
          <tr>
            <td>Stripe Token</td>
            <td>{{order.stripeToken}}</td>
          </tr>
          <tr>
            <td>Card Type</td>
            <td>{{order.cardType}}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
