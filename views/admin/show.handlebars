<div class="container">
  <h2>Order Information</h2>
  <div class="row">
    <div class="col-md-6">
      <h3>Ordered Items</h3>
      {{#each order.orderLine as |product| }}
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Field</th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th>Name</th>
              <th>{{ product.product.name }}</th>
            </tr>
            <tr>
              <th>Price</th>
              <th>${{ product.product.price }}.00</th>
            </tr>
            <tr>
              <th>SKU</th>
              <th>{{ product.product.sku }}</th>
            </tr>
            <tr>
              <th>Description</th>
              <th>{{ product.product.description }}</th>
            </tr>
            <tr>
              <th>Category</th>
              <th>{{ product.product.category }}</th>
            </tr>
            <tr>
              <th>Quantity</th>
              <th>{{ product.product.quantity }}</th>
            </tr>
          </tbody>
        </table>
      </div>
      {{/each }}
    </div>
    <div class="col-md-6">
      <div class="col-md-12">
        <h3>Customer Information</h3>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Field</th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>First Name</td>
              <td>{{ order.customer.fname }}</td>
            </tr>
            <tr>
              <td>Last Name</td>
              <td>{{ order.customer.lname }}</td>
            </tr>
            <tr>
              <td>Email</td>
              <td>{{ order.customer.email }}</td>
            </tr>
            <tr>
              <td>Street</td>
              <td>{{ order.address.street }}</td>
            </tr>
            <tr>
              <td>City</td>
              <td>{{ order.address.city }}</td>
            </tr>
            <tr>
              <td>State</td>
              <td>{{ order.address.state }}</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-md-12">
        <h3>Order Information</h3>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Field</th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th>Checkout Date</th>
              <th>{{ order.createdAt }}</th>
            </tr>
            <tr>
              <th>Stripe Token</th>
              <th>{{ order.stripeToken }}</th>
            </tr>
            <tr>
              <th>Card Type</th>
              <th>{{ order.cardType }}</th>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>