<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-2 card p-2 my-5'>
      <div class='row'>
        <div class='col-sm-6'>
          <img height="180" width="180" src="/images/image-placeholder.jpg">
        </div>
        <div class='col-sm-4'>
          <p>Product: {{product.name}}</p>
          <p>Price: ${{product.price}}</p>
          <p>{{product.description}}</p>
          <form action='/cart/{{product.name}}/add' method='get'>
            <button class='btn btn-primary'>Add to cart</button>
          </form>
        </div>
      </div>
    </div>
      <h4>Related Products</h4>
      <div class='row'>
        {{#each relatedArray as |related|}}
        <div class='col-md-4 card p-2'>
          <div class='row'>
            <div class='col-sm-3'>
          <img height="40" width="40" src="/images/image-placeholder.jpg">
        </div>
        <div class='col-sm-9'>
          <p>Product: <a href='/products/{{related._id}}'>{{related.name}}</a></p>
          <p>Price: ${{related.price}}</p>
          <p>{{related.description}}</p>
        </div>
      </div>
          <form action='/cart/{{related.name}}' method='get'>
            <input type='submit' value='Add to cart' class='btn btn-primary btn-sm'>
          </form>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
