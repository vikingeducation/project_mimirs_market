<h2>Cart</h2>

<div id="cart-container">
  <div id="cart-items-container">
    {{#each products as |product|}}
    <div class="shopping-cart-item-display">
      <div class="shopping-cart-img">
        <img src={{product.image}} width="100%" height="100px">
      </div>
      <div class="shopping-cart-blurb">
        <h5>{{product.name}}</h3>
        <p>${{product.price}}</p>
      </div>
      <div class="shopping-cart-form-container"> 
        <div class="shopping-cart-quantity-form">
          <form method="post" action="/shoppingCart">
            <input type="hidden" name="_method" value="put">

            <input type="number" name="quantity" value={{product.quantity}} min="0">
            <input class="set-cart-quantity-button" type="submit" value="Set quantity"/>
            <input type="hidden" value="{{product.id}}" name="cartId">
          </form>
        </div>

        <div class="shopping-cart-remove-form">
          <form method="post" action="/shoppingCart">
            <input type="hidden" name="_method" value="put">

            <input type="hidden" name="quantity" value="0">

            <input type="hidden" value="{{product.id}}" name="cartId">
            <input class="remove-from-cart-button" type="submit" value="Remove from cart"/>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <div id="cart-summary-and-checkout">
    <div id="cart-total-container">
      <h2>Total</h2>
      <h4>${{total}}</h4>
    </div>
    <div id="cart-checkout-container">
      <a href="/checkout">
        <button type="text" class="cart-checkout-button" value="">Checkout</button>
      </a>
      <form method="post" action="/shoppingCart">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" class="remove-from-cart-button" value="Clear all" name="">
      </form>
    </div>
  </div>

</div>
