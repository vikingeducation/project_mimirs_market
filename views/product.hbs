
<div class='container my-3'>
  <div class='row'>
    <div class='col-sm-7 offset-md-3'>
  <form action='/products/filter' class="form-inline" method='get'>
      <select name="category" class="form-control">
        <option value="">Category</option>
					{{#each categories as |category|}}
					<option value="{{category.id}}">{{category.name}}</option>
					{{/each}}
				</select>
      <select name="price" class="form-control">
        <option value="">Price</option>
					<option value="10">$10</option>
					<option value="20">$20</option>
					<option value="30">$30</option>
					<option value="40">$40</option>
					<option value="50">$50</option>
				</select>
      <select name="min_max" class="form-control">
        <option></option>
					<option value="max">max</option>
					<option value="min">min</option>
				</select>
  <input type='submit' value='Filter' class='btn btn-primary'>
  </form>
</div>
</div>
</div>

<div class="container">
  <div class="row">
    {{#each result as |product|}}
    <div class="col-md-3 card">
      <p class='mt-2'>Name: <a href='/products/{{product._id}}'>{{product.name}}</a></p>
      <img height="100" width="100" src="/images/image-placeholder.jpg">
      <p>Price: ${{product.price}}</p>
      <p>Description: {{product.description}}</p>
      <p># in stock: {{product.stock}}</p>
      <form action='/cart/{{product.name}}/add' method='get'>
        <button class="btn btn-primary btn-sm">Add to Cart</button>
      </form>
      <br><br>
    </div>
    {{/each}}
  </div>
</div>
