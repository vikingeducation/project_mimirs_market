<div class="col-sm-6 col-md-4 col-lg-3">
  <article class="panel {{#if product.selected }}panel-warning{{else}}panel-default{{/if}}">
    <header class="panel-heading">
      <a href="{{ productPath product.id }}">
        <h2 class="panel-title">
          {{ product.name }} | <small for="count">{{ product.prettyPrice }}</small>
        </h2>
      </a>
    </header>
    <section class="panel-body">
      <p>{{ product.Category.name }}</p>
      <p>Added on {{ product.prettyDate }}</p>
      <hr> {{> shared/_addOrUpdate product=product }}
  </article>
</div>
