<div class="row">
	<div class="col-md-3">
		<img src="/images/{{product.imagePath}}" height="100px" class="img-thumbnail">
	</div>
	<div class="col-md-2">
		<p>${{product.price}}.00</p>
		<p>{{product.name}}</p>
		<p>{{product.Category.name}}</p>
	</div>
	<div class="col-md-7">
		<p>{{product.description}}</p>
		{{#if product.inCart}}
				<a href="/cart" class="btn btn-success">Edit in Cart</a>
			{{else}}
				<form action="/products/{{product.id}}" method="post">
					<button class="btn btn-primary">Add to Cart</button>
				</form>
			{{/if}}
	</div>
</div>

<h2>Related Products</h2>

<div class="row">
	{{#each relatedProducts as |rProduct|}}
		<div class="col-md-4">
			<img src="/images/{{rProduct.imagePath}}" width="200px" class="img-thumbnail">
			<p>${{rProduct.price}}.00</p>
			<a href="/products/{{rProduct.id}}"><p>{{rProduct.name}}</p></a>
			<p>{{rProduct.Category.name}}</p>
			{{#if rProduct.inCart}}
				<a href="/cart" class="btn btn-success">Edit in Cart</a>
			{{else}}
				<form action="/products/{{rProduct.id}}" method="post">
					<button class="btn btn-primary">Add to Cart</button>
				</form>
			{{/if}}
		</div>
	{{/each}}
</div>
