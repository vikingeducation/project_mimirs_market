<h2>Search</h2>
<form action="/products">
  {{!-- Price--}}
  <h3>Price</h3>
  <select class="form-control" name="price[min]" id="price_min">
    {{#times start=0 stop=10 as |prices| }}
      <option value="{{ prices }}" selected>{{prices }}</option>
    {{/times}}
  </select>

  <br>
  <select class="form-control" name="price[max]" id="price_max">
    {{#times start=0 stop=10 as |prices| }}
      <option value="{{ prices }}" selected>{{prices }}</option>
    {{/times}}
  </select>

  <h3>Categories</h3>
  <select class="form-control" name="categories[submission]" id="category">
    {{#each categories as |category| }}
      <option value="{{ category.name }}" checked>{{category.name }}</option>
    {{/each}}
  </select>

  <h3>Sort</h3>
  <select class="form-control" name="sort[submission]" id="sort">
      <option value="sortNameASC" checked>Sort Name by Ascending</option>
      <option value="sortNameDESC" checked>Sort Name by Descending</option>
      <option value="sortPriceASC" checked>Sort Price by Ascending</option>
      <option value="sortPriceDESC" checked>Sort Price by Ascending</option>
  </select>

  <h3>Search Name</h3>
  <input type="text" placeholder="Search..." name="search[submission]" id="search">

  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>


{{#if products.length }}
  <div id="search-results" class="row">
    {{#each products as |product| }}
      <div class="user col-xs-12 col-sm-6 col-md-4 text-center">
        <div class="thumbnail">
          <img src="{{ productImagePath }}" alt="Product image" class="img-responsive">
          <div class="caption">
            <h3>
              <a href="{{ productPath product.id }}" class="btn btn-default" role="button">{{product.name}}</a>
            </3>
          </div>
        </div>
      </div>
    {{/each }}
  </div>
{{else }}
  <p class="text-danger">No products</p>
{{/if }}
