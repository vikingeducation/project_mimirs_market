
  <div class="row">

    <div class="col-md-8 col-md-offset-2">

     <div class="thumbnail show">
        <img class="img-responsive" src="/images/{{currentProduct.photo}}" alt="">
        <br>
        <div class="caption-full">
          <h4 class="pull-right">${{currentProduct.price}}</h4>
          <h4><a href="#">{{currentProduct.name}}</a>
          </h4>
          <h6>{{currentProduct.Category.name}}</h6>
          <p>{{currentProduct.description}}</p>
        </div>
        <div class="ratings text-center">
          {{#if (isInCart currentProduct.id cartProducts)}}
          <p>
            <a href="/cart" class="btn btn-success" style="width:150px">Edit Cart</a>
          </p>
          {{else}}
          <p>
            <form action="/addToCart" method="POST">
              <input type="hidden" name="productId" value="{{currentProduct.id}}">
              <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>
          </p>
          {{/if}}
        </div>
      </div>

    </div>

    <div class="row text-center">
        <!-- Title -->
      <div class="row">
        <div class="col-lg-12">
            <h3>Related Products</h3>
        </div>
      </div>
      <br>

    {{#each products as |product|}}
      <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
          <img src="/images/{{product.photo}}" alt="">
          <div class="caption">
            <h3><a href="/products/{{product.id}}">{{product.name}}</a></h3>
            <h5>${{product.price}}</h5>
            <p>{{../currentProduct.Category.name}}</p>
            {{#if (isInCart product.id ../cartProducts)}}
            <p>
              <a href="/cart" class="btn btn-success">Edit Cart</a>
            </p>
            {{else}}
            <p>
              <form action="/addToCart" method="POST">
                <input type="hidden" name="productId" value="{{product.id}}">
                <button type="submit" class="btn btn-primary">Add to Cart</button>
              </form>
            </p>
            {{/if}}
          </div>
        </div>
      </div>
    {{/each}}
    </div>

  </div>

<hr>
