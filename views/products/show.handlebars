<div class='row'>
  <div class="col-xs-12">
    <img class='largeImg' src='/{{product.img}}'>
  </div>
  <div class="col-xs-12">
    <form method='POST' action='/cart'>
      <div class="col-xs-4">
        <h3>${{product.price}}</h3>
        <h3><a href="/products/{{product.id}}">{{product.name}}</a></h3>
        <h5>{{product.description}}</h5>
        <button type='submit' class="btn btn-primary" value={{product.id}} name='addItem'>Add to Cart</button>
      </div>
    </form>
  </div>
  <div class="panel panel-primary">
    <div class='panel-heading'>Related Products</div>
    {{#each products as |product|}}
    <div class="panel-body">

      <form method='POST' action='/cart'>
        <div class="col-xs-4">
          <img src='/{{product.img}}' class='smallImg'>
          <h3>${{product.price}}</h3>
          <h3><a href="/products/{{product.id}}">{{product.name}}</a></h3>
          <h5>{{product.description}}</h5>
          <button type='submit' class="btn btn-primary" value={{product.id}} name='addItem'>Add to Cart</button>
        </div>
      </form>

    </div>
    {{/each}}
  </div>
</div>
