<h2 class="text-center">Product</h2>
<section class="featureProduct clearfix">
  <div class="col-sm-3 featureProductImg">
    <img src="{{product.img}}" class="pull-left" />
  </div>
  <div class="col-sm-3 featureProductInfo">
    <p><b>{{product.name}}</b></p>
    <p>{{product.category.name}}</p>
    <p>${{displayPrice product.price}}</p>
  </div>
  <div class="featureProductDesc">
    <p>{{product.description}}</p>
    <a class="btn btn-primary add-to-cart" id="{{product.id}}">Add to Cart</a>
  </div>
</section>
<h3 class="text-center" id="products-heading">Related Products</h3>
<section id="products">
  {{#each relatedProducts}}
    {{> partials/_productPreview}}
  {{/each}}
</section>
