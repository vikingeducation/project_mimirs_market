<header class="page-header">
  <h1>Your Shopping Cart</h1>
</header>

{{#if itemsArr.length }}
  <div id="cart-results" class="row">
    {{#each itemsArr as |product| }}
      <div class="user col-xs-12 col-sm-6 col-md-4 text-center">
        <div class="thumbnail">
          <img src="{{ productImagePath }}" alt="Product image" class="img-responsive">
          <div class="caption">
            <h3>
              <a href="{{ productPath product.id }}" class="btn btn-default" role="button">{{product.name}}</a>
              <h4>Category: {{product.Category.name}}<h4>
              <h4>${{product.price}}.00<h4>
                <form action="/cart">
                <h3>Set Quantity</h3>
                <input type="text" placeholder="Number..." name="quantity[submission]" id="quantity">
                <input type="hidden" name="quantity{{product.id}}">
                  <div class="form-group">
                    <input type="submit" class="btn btn-primary">
                  </div>
                </form>
              <a href="/cart/{{product.id}}/remove" class="btn btn-default" role="button">Remove</a>
            </3>
          </div>
        </div>
      </div>
    {{/each }}
  </div>
  <div class="total">Total:${{total}}.00<div>
  <a href="/cart/clear" class="btn btn-default" role="button">Clear Cart</a>
  <a href="/checkout" class="btn btn-default" role="button">Checkout! Treat Yourself! It's Christmas!</a>
{{else }}
<p class="text-danger">No products in cart! Buy Some!</p>
{{/if }}
