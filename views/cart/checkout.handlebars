<div class='container'>
  <div class='row justify-content-center'>
    <h3 class='col-xs-12' align='center'>Checkout</h3>
  </div>
</div>
<form method='POST' action='/checkout' class='row'>
  <!--left section      BILLING INFO -->
  <div class='col-xs-6'>
    <div class="panel panel-primary">
      <div class='panel-heading'>Billing Info</div>
      <div class="panel-body">

        <h5>Personal Info</h5>
        <hr>
        <div class='form-group'>
          <label for='fname'>First Name</label>
          <input type='text' class="form-control" id="fname" name="user[fname]" value="Bob">
        </div>
        <div class='form-group'>
          <label for='lname'>Last Name</label>
          <input type='text' class="form-control" id="lname" name="user[lname]" value="Tom">
        </div>
        <div class='form-group'>
          <label for='email'>Email</label>
          <input type='email' class="form-control" id="email" name="user[email]" value="coolStuff@aol.com">
        </div>
        <h5>Address</h5>
        <hr>
        <div class='form-group'>
          <label for='street'>Street</label>
          <input type='text' class="form-control" id="street" name="user[street]" value="Karlton St">
        </div>
        <div class='form-group'>
          <label for='city'>City</label>
          <input type='text' class="form-control" id="city" name="user[city]" value="Bobville">
        </div>
        <div class='form-group'>
          <label for="state">State</label>
          <select name="user[state]" id="state" class="form-control">
            {{#each states as |state|}}
              <option value={{state}}>{{state}}</option>
            {{/each}}
          </select>
        </div>

      </div>
    </div>
  </div>

  <!--right section     YOUR CART -->
  <div class='col-xs-6'>
    <div class="panel panel-primary">
      <div class='panel-heading'>Cart</div>

      <!-- create panel-body -->
      {{#each cart as |item|}}
      <div class="panel-body">
        <div class='col-xs-12'>
          <div class='row'>
            <div class='col-xs-4'>
              <img src='/{{item.img}}'class='smallImg'>
            </div>
            <div class='col-xs-8 text-right'>
              <p>{{item.name}} ||   ${{item.price}} x {{item.quantity}} = ${{item.subtotal}}</p>
            </div>
          </div>
        </div>
      </div>
      {{/each}}

    </div>
    <div class='col-xs-12'>
      <!-- BUY IT NOW-->
      <p>Your Total: ${{total}}</p>
      <input type='hidden' name='total' value={{total}}>
      <!-- figure out how to submit a get request within a form -->
      <!-- <form method='GET' action='/cart'>
        <button type='submit' class="btn btn-danger">Return to Cart</button>
      </form> -->

      <!-- <button type='submit' class="btn btn-success">Submit Payment</button> -->
      <!--Stripe button-->
      <script
        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="{{ STRIPE_PK }}"
        data-amount="100"
        data-name="Stripe Node Test"
        data-description="Widget"
        data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
        data-locale="auto"></script>
    </div>
  </div>

</form>
<form method='GET' action='/cart'>
  <button type='submit' class="btn btn-danger">Return to Cart</button>
</form>

