<h1>We got ur money</h1>
<h2>Thanks</h2>

<div class="row">
  <div class="col-md-6">
    <h5>{{order.fname}} {{order.lname}}</h5>
    <h5>{{order.address}}</h5>
    <h5>{{order.city}}, {{order.zip}}, {{order.state}}</h5>
    <h1>Total: ${{order.total}}.00</h1>
  </div>

  <div class="col-md-6">
    {{#each order.orderedProducts as |product|}}
      <div class="row mb-3">
        <div class="col-md-4">
          <img style="width:100px;height:100px;" src="/images/product.png" alt="">
        </div>
        <div class="col-md-4">
          <h5>{{product.name}}</h5>
          <h6>{{product.Category.name}}</h6>
        </div>
        <div class="col-md-4">
          <h5>Each: ${{product.price}}.00</h5>
          <h5>{{product.quantity}} items</h5>
        </div>
      </div>
    {{/each}}
  </div>
</div>
