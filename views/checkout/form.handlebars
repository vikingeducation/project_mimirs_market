<div class='container'>
  <div class='row' style='padding-top:25px; padding-bottom:25px;'>
    <div class='col-md-12'>
      <div id='mainContentWrapper'>
        <div class="col-md-8 col-md-offset-2">
          <h2 style="text-align: center;">
                        Review Your Order & Complete Checkout
                    </h2>
          <hr/>
          <a href="/products" class="btn btn-warning" style="width: 100%;">Keep Shopping for Viking Gear!</a>
          <hr/>
          <a href="/cart" class="btn btn-primary" style="width: 100%;">Return To Cart</a>
          <hr/>
          <div class="shopping_cart">
            <form class="form-horizontal" id="payment-form">
            </form>
            <div class="panel-group" id="accordion">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Review
                                                Your Order</a>
                                        </h4>
                </div>
                <div id="collapseOne" class="panel-collapse collapse in">
                  <div class="panel-body">
                    <div class="items">
                      <div class="col-md-9">
                        <table class="table table-striped">

                          {{#each items as |item|}}
                            <tr>
                              <td colspan="2">

                                <form action="/cart/delete" method="POST">
                                  <input type="hidden" name="_method" value="DELETE">
                                  <input type="hidden" name="delete" value="{{item.id}}">
                                  <input type="hidden" name="checkoutPage" value="checkoutPage">
                                  <button type="submit" class="btn btn-danger btn-sm pull-right" title="Remove Item">X</button>
                                </form>
                                <form action="/cart" method="GET">
                                  <button type="subimit" class="btn btn-primary btn-sm pull-right" title="Remove Item">Edit</button>
                                </form>
                                <b style="font-size: 20px;">
                                                                    {{item.name}}</b></td>
                            </tr>
                            <tr>
                              <td>
                                <ul style="list-style: none;">
                                  <li><img style="width: 30%;" src="{{item.imageUrl}}"></li>

                                  <li><strong>Description: <br></strong>{{item.description}}</li><br>
                                  <li><strong>Category: </strong>{{item.Category.name}}</li>

                                </ul>
                              </td>
                              <td>
                                <b style="font-size: 18px;">Price: ${{item.price}}</b>
                                <b><hr></b>

                                <b style="font-size: 18px;">Quantity: {{item.quantity}}</b>

                              </td>
                            </tr>
                          {{/each}}
                        </table>
                      </div>
                      <div class="col-md-3">
                        <div style="text-align: center;">
                          <h3>Order Total</h3>
                          <h3><span style="color:green;">${{total}}</span></h3>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

              </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                                        <div style="text-align: center; width:100%;"><a style="width:100%;"
                                                                                        data-toggle="collapse"
                                                                                        data-parent="#accordion"
                                                                                        href="#collapseTwo"
                                                                                        class=" btn btn-success"
                                                                                        onclick="$(this).fadeOut(); $('#payInfo').fadeIn();">Continue to Contact Information >></a></div>
                                    </h4>
              </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">Contact Information</a>
                                    </h4>
              </div>
              <form action="/checkout/info" method="post">
              <div id="collapseTwo" class="panel-collapse collapse">
                <div class="panel-body">

                  <br/><br/>
                  <table class="table table-striped" style="font-weight: bold;">
                    <tr>
                      <td style="width: 175px;">
                        <label for="id_email">Email:</label></td>
                      <td>
                        <input class="form-control" id="id_email" name="info[email]" type="text" />
                      </td>
                    </tr>
                    <tr>
                      <td style="width: 175px;">
                        <label for="id_first_name">First name:</label></td>
                      <td>
                        <input class="form-control" id="id_first_name" name="info[firstName]" type="text" />
                      </td>
                    </tr>
                    <tr>
                      <td style="width: 175px;">
                        <label for="id_last_name">Last name:</label></td>
                      <td>
                        <input class="form-control" id="id_last_name" name="info[lastName]" type="text" />
                      </td>
                    </tr>
                    <tr>
                      <td style="width: 175px;">
                        <label for="description_order">A short description of your order:</label></td>
                      <td>
                        <input class="form-control" id="description_order" name="info[description]" type="text" />
                      </td>
                    </tr>
                    <tr>
                      <td style="width: 175px;">
                        <label for="id_address_line_1">Address:</label></td>
                      <td>
                        <input class="form-control" id="id_address_line_1" name="info[address]" type="text" />
                      </td>
                    </tr>

                    <tr>
                      <td style="width: 175px;">
                        <label for="id_city">City:</label></td>
                      <td>
                        <input class="form-control" id="id_city" name="info[city]" type="text" />
                      </td>
                    </tr>
                    <tr>
                      <td style="width: 175px;">
                        <label for="id_state">State:</label></td>
                      <td>
                        <select class="form-control" id="id_state" name="info[state]">
                              <option value="AK">Alaska</option>
                              <option value="AL">Alabama</option>
                              <option value="AZ">Arizona</option>
                              <option value="AR">Arkansas</option>
